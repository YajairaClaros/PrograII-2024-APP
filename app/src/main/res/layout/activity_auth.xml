<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvandera"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Ingrese los datos que se le solicitan"
            />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dui"
            android:textSize="18dp"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp"
            android:ems="10" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:hint="ContraseÃ±a"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btregis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/botones"
                android:text="Registrar" />

            <Button
                android:id="@+id/btacce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/botones"
                android:text="Acceder" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textViewNuevasIdeas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Nuevas Ideas: "
        android:textSize="20dp"
        android:layout_marginTop="375dp"/>

    <TextView
        android:id="@+id/textViewFMLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNuevasIdeas"
        android:layout_marginStart="15dp"
        android:text="FMLN: "
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textarena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFMLN"
        android:layout_marginStart="15dp"
        android:text="Arena: "
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textnuestrotiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textarena"
        android:text="Nuestro Tiempo: "
        android:layout_marginStart="15dp"
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewfuerzasolidaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnuestrotiempo"
        android:layout_marginStart="15dp"
        android:text="Fuerza solidaria: "
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewfps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewfuerzasolidaria"
        android:layout_marginStart="15dp"
        android:text="FPS: "
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewfps"
        android:layout_marginStart="315dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:icon="@android:drawable/ic_dialog_email"
        app:srcCompat="@android:drawable/ic_menu_send" />
</RelativeLayout>